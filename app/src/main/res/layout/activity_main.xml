<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context="edu.sjsu.kyle.todobucketlist.MainActivity">

    <TextView
        android:id="@+id/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Things You Should've Done Yesterday"
        android:textAllCaps="false"
        android:textSize="72dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/headerSubText"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerText"
        android:text="Seriously dude, stop being lazy"
        android:textAllCaps="false"
        android:textSize="26dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorPrimaryText"/>


    <com.google.android.gms.common.SignInButton
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:id="@+id/googleLogin"
        android:layout_below="@id/headerSubText"/>



</RelativeLayout>
