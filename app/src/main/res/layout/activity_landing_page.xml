<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.sjsu.kyle.todobucketlist.LandingPageActivity"
    android:background="@drawable/gradient_background">

    <!-- Layout for the User profile description -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.65"
        android:padding="5dp"
        android:id="@+id/profileLayout">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:id="@+id/profilePic"
            android:padding="2dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="24dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/profilePic"
            android:layout_toEndOf="@id/profilePic"
            android:id="@+id/profileNameTag"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your name here"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginTop="23dp"
            android:layout_toRightOf="@id/profileNameTag"
            android:layout_toEndOf="@id/profileNameTag"
            android:id="@+id/profileName"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="24dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/profilePic"
            android:layout_toEndOf="@id/profilePic"
            android:layout_below="@id/profileNameTag"
            android:id="@+id/profileEmailTag"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your email here"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/profileEmailTag"
            android:layout_toEndOf="@id/profileEmailTag"
            android:layout_below="@id/profileName"
            android:id="@+id/profileEmail"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2.5"
            android:layout_toRightOf="@id/profilePic"
            android:layout_toEndOf="@id/profilePic"
            android:layout_below="@id/profileEmail"
            android:gravity="center">

            <Button
                android:background="@drawable/logout_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:layout_marginTop="2dp"
                android:text="Log Out"
                android:textStyle="bold"
                android:textSize="24sp"
                android:id="@+id/logOut"
                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".55"
        android:padding="3dp"
        android:id="@+id/progressLayout"
        android:background="@drawable/gradient_border">

        <LinearLayout
            android:id="@+id/textProgressLayout"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:gravity="left"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/levelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Level :"
                android:textStyle="bold"
                android:textSize="22sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/levelLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:gravity="left"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/textProgressLayout"
            android:layout_toEndOf="@id/textProgressLayout">

            <ProgressBar
                android:indeterminate="false"
                android:layout_centerInParent="true"
                android:id="@+id/levelProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:max="30"
                />

        </LinearLayout>
    </RelativeLayout>

    <!-- Layout for the Weather section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.75"
        android:padding="3dp"
        android:id="@+id/weatherLayout"
        android:background="@drawable/gradient_border">

        <ImageView
            android:id="@+id/weatherIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:id="@+id/tempLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:layout_toRightOf="@id/weatherIcon"
            android:layout_toEndOf="@id/weatherIcon"
            android:gravity="left"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txtCelsius"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-- Â°F"
                android:textStyle="bold"
                android:textSize="38sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:layout_toRightOf="@id/weatherIcon"
            android:layout_toEndOf="@id/weatherIcon"
            android:gravity="left"
            android:layout_marginTop="55dp">


            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="N/A"
                android:textStyle="bold"
                android:textSize="26sp"
                android:gravity="left" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:layout_toRightOf="@id/weatherIcon"
            android:layout_toEndOf="@id/weatherIcon"
            android:gravity="right"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txtCity"
                android:layout_marginTop="2dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="City, State"
                android:textStyle="bold"
                android:textSize="32sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:layout_toRightOf="@id/weatherIcon"
            android:layout_toEndOf="@id/weatherIcon"
            android:gravity="right"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/txtHumidity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Humidity: N/A"
                android:textStyle="bold"
                android:textSize="22sp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:layout_toRightOf="@id/weatherIcon"
            android:layout_toEndOf="@id/weatherIcon"
            android:gravity="right"
            android:layout_marginTop="80dp">

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sunrise: N/A\nSunset: N/A"
                android:textStyle="bold"
                android:textSize="22sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:gravity="start"
            android:layout_marginTop="100dp">

            <TextView
                android:id="@+id/txtLastUpdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:paddingLeft="8dp"
                android:gravity="left"
                android:text="Last Updated: N/A"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>

    <!-- Layout for the Activity buttons section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:padding="5dp"
        android:id="@+id/activityLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:gravity="start">

            <Button
                android:background="@drawable/logout_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="To Do List"
                android:id="@+id/goToList"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2.5"
            android:gravity="end">

            <Button
                android:background="@drawable/logout_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Drawing Canvas"
                android:id="@+id/goToCanvas"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
